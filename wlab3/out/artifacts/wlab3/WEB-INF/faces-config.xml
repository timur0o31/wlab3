<faces-config version="3.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                                  https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_3_0.xsd">
    <managed-bean>
        <managed-bean-name>databaseBean</managed-bean-name>
        <managed-bean-class>lab3.DatabaseManagerBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>resultBean</managed-bean-name>
        <managed-bean-class>lab3.ResultBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>requestBean</managed-bean-name>
        <managed-bean-class>lab3.RequestBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>DatabaseManagerBean</property-name>
            <value>#{databaseBean}</value>
        </managed-property>
        <managed-property>
            <property-name>ResultBean</property-name>
            <value>#{resultBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>pointBean</managed-bean-name>
        <managed-bean-class>lab3.Point</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>startPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>startPage</from-outcome>
            <to-view-id>startPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
